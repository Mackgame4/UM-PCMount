@page "/dashboard"
@attribute [Authorize(Roles = "Admin")]
@layout DashboardLayout
<PageTitle>PCMount - Dashboard</PageTitle>

<div class="grid grid-cols-12 gap-4 w-full h-screen-space">
    <!-- Section 1: Wide header -->
    <div class="col-span-12 bg-gray-400 rounded-lg p-4 shadow">
        <h3 class="text-xl font-bold">Overview</h3>
        <p class="text-sm text-gray-600">Quick stats and insights</p>
    </div>

    <!-- Section 2: Medium-sized stats -->
    <div class="col-span-6 lg:col-span-4 bg-blue-400 rounded-lg p-4 shadow">
        <h4 class="text-lg font-semibold">Active Users</h4>
        <p class="text-2xl font-bold">1,245</p>
    </div>
    <div class="col-span-6 lg:col-span-4 bg-green-400 rounded-lg p-4 shadow">
        <h4 class="text-lg font-semibold">Sales</h4>
        <p class="text-2xl font-bold">$12,450</p>
    </div>
    <div class="col-span-6 lg:col-span-4 bg-yellow-400 rounded-lg p-4 shadow">
        <h4 class="text-lg font-semibold">New Signups</h4>
        <p class="text-2xl font-bold">320</p>
    </div>

    <!-- Section 3: Large chart -->
    <div class="col-span-12 lg:col-span-8 bg-gray-400 rounded-lg p-4 shadow">
        <h4 class="text-lg font-semibold">Sales Chart</h4>
        <p class="text-sm text-gray-600">Last 30 days</p>
        <!-- Add chart here -->
        <div class="h-40 bg-white rounded-md"></div>
    </div>

    <!-- Section 4: Smaller widgets -->
    <div class="col-span-12 lg:col-span-4 bg-red-400 rounded-lg p-4 shadow">
        <h4 class="text-lg font-semibold">Notifications</h4>
        <ul class="text-sm text-gray-600 list-disc list-inside">
            <li>Order #1234 shipped</li>
            <li>New signup: Jane Doe</li>
            <li>Payment received for Order #5678</li>
        </ul>
    </div>
</div>

<style scoped>
    .h-screen-space {
        /* Calculate the height of the screen without the height of the header */
        height: calc(100vh - 11.5rem);
    }
</style>