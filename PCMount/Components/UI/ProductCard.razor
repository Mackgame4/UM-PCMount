@namespace PCMount.Components.UI

@using Microsoft.FluentUI.AspNetCore.Components

<FluentCard MinimalStyle="true" class="relative flex flex-col justify-between items-center text-center gap-2 h-full">
    <div class="w-36 h-36 rounded-md">
        <img src="@ProductImage" class="object-cover w-full h-full rounded-md" />
    </div>
    @if (ProductDiscount > 0)
    {
        <FluentBadge Fill="highlight" BackgroundColor="#991b1b" Color="white" Class="absolute top-3 left-3">-@ProductDiscount%</FluentBadge>
    }
    <FluentBadge Fill="highlight" BackgroundColor="#166534" Color="white" Class="absolute top-3 right-3">$@ProductPrice</FluentBadge>
    <h3 class="mb-0">@ProductName</h3>
    <div class="mt-auto">
        <div class="flex flex-col gap-1 justify-start items-start text-left text-sm mb-1.5">
            <span><FluentBadge Appearance="Appearance.Neutral">Motherboard:</FluentBadge> Motherboard</span>
            <span><FluentBadge Appearance="Appearance.Neutral">CPU:</FluentBadge> CPU</span>
            <span><FluentBadge Appearance="Appearance.Neutral">GPU:</FluentBadge> GPU</span>
        </div>
        <div class="mt-2 w-full">
            <FluentButton class="w-full" IconStart="@(new Icons.Regular.Size16.Cart())" Appearance="Appearance.Accent">Add to Cart</FluentButton>
        </div>
    </div>
</FluentCard>

@code {
    [Parameter]
    public string? ProductName { get; set; } = "ProductName";

    [Parameter]
    public decimal ProductPrice { get; set; } = 0;

    [Parameter]
    public string? ProductImage { get; set; } = "/assets/product-placeholder.png";

    [Parameter]
    public decimal? ProductDiscount { get; set; } = 0;
}